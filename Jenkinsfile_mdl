#!groovy

pipeline {
    agent any
    options {
        // Only keep the 10 most recent builds
        buildDiscarder(logRotator(numToKeepStr:'10'))
        timestamps()
    }
    stages {
        stage('Simulink Build'){
            steps {
                bat 'example_build'
            }
        }
        stage('Archive Build') {
            steps {
                archive "*_ert_rtw/*"
            }
        }
    }
    post {
        always {
            archive "example_build.log"
        }
    }
}